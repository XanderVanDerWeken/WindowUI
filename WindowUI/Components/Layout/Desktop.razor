@rendermode InteractiveServer

<div class="desktop">
    <div class="desktop-grid">
        <div class="icon" @onclick="() => ShowTodo()">
            <img src="icons/todolist.png" alt="todo icon" />
            <div>Todo</div>
        </div>
    </div>

    @if (showTodo)
    {
        <TodoWidget OnClose="@(() => showTodo = false)" />
    }
</div>

<Taskbar Tasks=tasks />

@code {
    private bool showTodo = false;

    private List<string> tasks = ["File Explorer", "Web Browser"];

    private void ShowTodo()
    {
        showTodo = true;
        StateHasChanged();
    }
}
